<body>

<div class="game-container">
  <h1>Guess the Number</h1>
  <input type="text" id="numbers" placeholder="Enter a number between 1-10">
  <button onclick="loosu()">Check</button>
  <p id="checks">You are right/wrong</p>
  <p id="scores">Score: 10</p>
</div>

<script>
   var inputNumber = document.getElementById("numbers");
   var resultMessage = document.getElementById("checks");
   var scoreDisplay = document.getElementById("scores");
   var randomNumber = Math.floor(Math.random() * 10) + 1;
   var score = 10;

   
   var winSound = new Audio('https://www.fesliyanstudios.com/play-mp3/6408');
var loseSound = new Audio('https://www.fesliyanstudios.com/play-mp3/6293'); 

   function loosu(){
      var userGuess = parseInt(inputNumber.value);

      if(userGuess === randomNumber){
         score += 1;
         scoreDisplay.textContent = "Score: " + score;
         resultMessage.textContent = "You won!";
         resultMessage.style.color = "#2ecc71";  
         winSound.play();  
         alert("You won!");

         randomNumber = Math.floor(Math.random() * 10) + 1;
         inputNumber.value = "";
      }
      else {
        if(score>=1){
         score -= 1;
         scoreDisplay.textContent = "Score: " + score;
         resultMessage.textContent = "You lose!";
         resultMessage.style.color = "#e74c3c";  
         loseSound.play();  
         alert("You lose!");}
         else{
          alert("restart the game")
         }
         

         
         document.querySelector('.game-container').classList.add('shake');
         setTimeout(function() {
             document.querySelector('.game-container').classList.remove('shake');
         }, 500);
      }
   }
</script>

</body>
</html>
